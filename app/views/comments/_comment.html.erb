<li id="comment-<%= comment.id %>">
  <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
  <span class="content">
    <%= comment.content %>
  </span>
  <span class="timestamp">
    Comment by <span class="user"><%= link_to comment.user.name, comment.user %></span> <%= time_ago_in_words(comment.created_at) %> ago.
    <% if current_user?(comment.user) %>
      <%= link_to "Edit", edit_comment_path(comment.id) %>
      <%= link_to "Delete", comment, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>